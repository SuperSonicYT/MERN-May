doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  title Sign Up Form by Colorlib
  // Font Icon
  link(rel='stylesheet' href='fonts/material-icon/css/material-design-iconic-font.min.css')
  // Main css
  link(rel='stylesheet' href='css/style.css')
.main
  // Sign up form
  section.signup
    .container
      .signup-content
        .signup-form
          h2.form-title Sign up
          h4.form-title #{message}
          form#register-form.register-form(action='/signup' method='POST')
            .form-group
              label(for='name')
                i.zmdi.zmdi-account.material-icons-name
              input#name(type='text' name='name' placeholder='Your Name')
            .form-group
              label(for='email')
                i.zmdi.zmdi-email
              input#email(type='email' name='id' placeholder='Your Email')
            .form-group
              label(for='password')
                i.zmdi.zmdi-lock
              input#pass(type='password' name='password' placeholder='Password')
            .form-group
              label(for='re-password')
                i.zmdi.zmdi-lock-outline
              input#re_pass(type='password' name='re_password' placeholder='Repeat your password')
            .form-group
              input#agree-term.agree-term(type='checkbox' name='agree-term')
              label.label-agree-term(for='agree-term')
                span
                  span
                | I agree all statements in  
                a.term-service(href='#') Terms of service
            .form-group.form-button
              input#signup.form-submit(type='submit' name='signup' value='Register')
        .signup-image
          figure
            img(src='images/signup-image.jpg' alt='sing up image')
          a.signup-image-link(href='#') I am already member
  
// JS
script(src='vendor/jquery/jquery.min.js')
script(src='js/main.js')
